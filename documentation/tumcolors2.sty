% Math Logo

% Draws the Math Logo. Ratio: 1 x 1.
% Takes a single parameter which contains one or more
% of the following options:
% - width: The desired width of the logo
% - height: The desired height of the logo (same as width)
% - size: Size of the logo (same as width)
%   You have to specify exactly one of the three options width, height or size.
% - color: The desired drawing color for the logo. Default: tumblue
%
% Example: \mathlogo{size=5cm, color=red}
\newcommand{\mathlogo}[1]{{
	% Extract parameters
	\setkeys{mathlogo}{#1}%
%
  \def\mathlogo@draw{\mathlogo@color}%
%
	% Set default values
	\@ifundefined{mathlogo@size}{%
		\PackageError{mathlogo: You have to specify either size, width OR height!}%
	}{}%
	\@ifundefined{mathlogo@color}{%
		\def\mathlogo@color{tumblue}%
	}{}%
	
%
	% Start a TikZ picture with apropriate scaling
	\begin{tikzpicture}[x=\mathlogo@size, y=\mathlogo@size]
    \path[draw=\mathlogo@draw, line width=1.2*0.025196*\mathlogo@size]
    (0,0) circle[radius=0.5*\mathlogo@size];%
    \path[draw=\mathlogo@draw, line width=0.9*0.025196*\mathlogo@size]
    (150:0.465*\mathlogo@size) -- (90:0.465*\mathlogo@size) -- (30:0.465*\mathlogo@size) -- (-30:0.465*\mathlogo@size) -- (-90:0.465*\mathlogo@size) -- (-150:0.465*\mathlogo@size) -- cycle;%
    \path[draw=\mathlogo@draw, line width=0.9*0.025196*\mathlogo@size]
    (90:0.425*\mathlogo@size) -- (-30:0.425*\mathlogo@size) -- (-150:0.425*\mathlogo@size) -- cycle;%
	\end{tikzpicture}
}}
\define@key{mathlogo}{size}{%
  \@ifundefined{mathlogo@size}{%
    \def\mathlogo@size{#1}%
  }{%
    \PackageError{tumlogo: You can only specify either size, width OR height!}%
  }%
}
\define@key{mathlogo}{width}{%
  \@ifundefined{mathlogo@size}{%
    \def\mathlogo@size{#1}%
  }{%
    \PackageError{tumlogo: You can only specify either size, width OR height!}%
  }%
}
\define@key{mathlogo}{height}{%
  \@ifundefined{mathlogo@size}{%
    \def\mathlogo@size{#1}%
  }{%
    \PackageError{tumlogo: You can only specify either size, width OR height!}%
  }%
}
